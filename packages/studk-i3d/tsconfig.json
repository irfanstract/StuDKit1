{
  "extends": "../../tsconfig.json" ,
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "checkJs": true,
    "allowSyntheticDefaultImports": true ,
    "module": "ESNext",

    /* https://www.typescriptlang.org/docs/handbook/project-references.html */
    "composite": true ,
    "noEmit": true,
    "allowImportingTsExtensions": true ,
    /* https://stackoverflow.com/a/61513685 */
    "rootDir": "src" ,
    "outDir": "dist",

    /* `jsx` in `studk-demos` needs to be set to `"preserve"` per the Next(JS) docs - therefore we assume `"react-jsx"` */
    "jsx": "react-jsx",
  },
  "references": [
    { "path": "../../packages/typexpe-commons", } ,
    { "path": "../../packages/studk-util", } ,
    { "path": "../../packages/studk-simulations-commons", } ,
    { "path": "../../packages/studk-fwcore", } ,
    { "path": "../../packages/studk-fwcore-setups", } , /* because we're using some types from there */
    { "path": "../../packages/studk-ui-core", } ,
    { "path": "../../packages/studk-dom-util", } ,
    { "path": "../../packages/studk-fbreact-all", } ,
    { "path": "../../packages/studk-ui-coresemanticelems", } ,
    { "path": "../../packages/studk-ui", } ,
    // temporary "Video FW Core" package refs
    { "path": "../../packages/studk-i3d", } ,
    { "path": "../../packages/studk-video-fwcore", } ,
  ] ,
  "include": [
    "src" ,
    "test" ,
  ],
  // "exclude": [
  //   "src/**/*" ,
  // ],
}
