{
  "extends": "../../tsconfig.json" ,

  "compilerOptions": {

    "moduleResolution": "Bundler",
    "checkJs": true,
    "allowSyntheticDefaultImports": true ,
    "module": "ESNext",

    /* https://www.typescriptlang.org/docs/handbook/project-references.html */
    "composite": true ,
    "noEmit": false, "emitDeclarationOnly": true, /* https://stackoverflow.com/a/77369498 */
    "allowImportingTsExtensions": true ,
    /* https://stackoverflow.com/a/61513685 */
    "rootDir": "src" ,
    "outDir": "dist",

    /* `jsx` in `studk-demos` needs to be set to `"preserve"` per the Next(JS) docs - therefore we assume `"react-jsx"` or `"react"` */
    "jsx": "react",
  },

  "references": [
    { "path": "../../packages/typexpe-commons/tsconfig.build.json", } ,
    { "path": "../../packages/studk-util/tsconfig.build.json", } ,
    { "path": "../../packages/studk-simulations-commons/tsconfig.build.json", } ,
    { "path": "../../packages/studk-fwcore/tsconfig.build.json", } ,

    { "path": "../../packages/studk-audio-fwcore/tsconfig.build.json", } ,
    /* we need this forward reference because some our files still use this */
    /* we can only stick to the "emit-declaration-only" config-file */
    { "path": "../../packages/studk-audio-pipeline-encore/tsconfig.build.json", } ,

    { "path": "../../packages/studk-ui", } ,
  ] ,

  "include": [
    "src" ,
    "test" ,
  ],

}
